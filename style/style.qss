/* #ffdcb4 (255,220,180)
   #ffc37d (255,195,125)
   #ffb17b (255,177,123)
   #ffa466 (255,164,102)
   #ff8518 (255,133,24) */

#mango * {
    font: 12pt "Arial";
    background: white;
}
QFrame {
    background: white;
    margin: 0px;
    padding: 0px;
    border: 0px;
}

QLabel#title {
    background-color: #ff8518; 
    padding: 5px;
    color: white;
    font: bold 20pt "Arial";
}

QPushButton#mango, QPushButton#mangobold{
    color: white;
    background: #ff8518;
    border: 8px solid #ff8518;
    border-radius: 6px;
}

QPushButton:hover#mango, QPushButton:hover#mangobold{
    background: #ffb17b;
    border-color: #ffb17b;
}

QPushButton:pressed#mango, QPushButton:pressed#mangobold{
    background: #ffdcb4;
    border-color: #ffdcb4;
}

QPushButton#mangobold {
    font: bold 12pt "Arial";
}

QComboBox#mango {
    background: white;
    padding: 7px;
    border: 1px solid black;
    border-radius: 6px;
    color: black;  /* Added text color */
}

QComboBox::down-arrow#mango {
    image: url(icons:icon-park-outline--down.svg);
    width: 20px;
}

QComboBox::drop-down::button#mango {
    background-color: white;
    border-left: 1px solid black;
    margin: 2px;
    width: 20px
}

QComboBox::drop-down#mango {
    margin: 2px;
}

QComboBox::item:selected#mango {
    background: #ffb17b;
    color: black;  /* Text color for selected item */
}

QComboBox::item {
    color: black;  /* Text color for dropdown items */
    background-color: white;
}

QComboBox#mango QAbstractItemView {
    border: 2px solid black;
    border-radius: 6px;
    background: white;
    color: black;
}

QTableWidget#mango {
    border: 1px solid black;
    border-radius: 6px;
    padding: 2px;
    color: black;  /* Added text color */
}

QTableWidget#mango QHeaderView::section {
    background-color: white;
    margin: 0px;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
    padding: 5px;
    color: black;  /* Added text color */
}

QTableWidget#mango QHeaderView {
    background-color: white;
}

QTableWidget::item {
    margin: 0px;
    border: 0px;
    padding: 4px;
    color: black;  /* Added text color */

}

QTableWidget::item:selected {
    background-color: #ffb17b;
    color: black;
}

/* Rest of your scrollbar styling remains the same */
QScrollBar:horizontal {
    border: none;
    background: #ffdcb4;
    height: 10px;
    margin: 0px 20px 0px 20px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: #ff8518;
    min-width: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
    background: none;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: #ffdcb4;
}

QScrollBar:vertical {
    border: none;
    background: #ffdcb4;
    width: 10px;
    margin: 20px 0px 20px 0px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #ff8518;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: #ffdcb4;
}